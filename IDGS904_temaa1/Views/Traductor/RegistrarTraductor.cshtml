@model IDGS904_temaa1.Models.Traductor

@{
    ViewBag.Title = "RegistrarTraductor";
}

<h2>RegistrarTraductor</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Maestros</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.Espanol, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Espanol, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Espanol, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Ingles, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Ingles, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Ingles, "", new { @class = "text-danger" })
            </div>
        </div>


        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Guardar datos" class="btn btn-primary" />
            </div>
        </div>
    </div>
}

@using (Html.BeginForm("LeerDatos", "Traductor", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Mostrar datos" class="btn btn-danger" />
        </div>
    </div>

}

@if (ViewBag.Archivo is null)
{

}
else
{
    <table style="border-collapse: collapse; border: 2px solid black;">
        <thead>
            <tr>
                <th style="border: 2px solid black; padding: 5px;">Español</th>
                <th style="border: 2px solid black; padding: 5px;">Inglés</th>
            </tr>
        </thead>
        <tbody>
            @foreach (string tem in ViewBag.Archivo)
            {
                var items = tem.Split(',');

                <tr>
                    <td style="border: 1px solid black; padding: 5px;">@items[0]</td>
                    <td style="border: 1px solid black; padding: 5px;">@items[1]</td>
                </tr>
            }
        </tbody>
    </table>
}

@using (Html.BeginForm("MostrarPalabra", "Traductor", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Traducir palabras" class="btn btn-secondary" />
        </div>
    </div>

}